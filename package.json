  "repository": {
    "type": "git",
    "url": "https://github.com/xpchbill/bill-docz.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "bs": "lerna bootstrap",
    "dev": "npm run packages:build && lerna run dev --parallel --scope={@bill-doc/doc-core,@bill-doc/doc-builder,bill-doc-theme-gatsby,@bill-doc/doc-plugin-rehype,@bill-doc/doc-plugin-remark}",
    "examples:lint": "eslint examples --ext js,mdx,ts,tsx",
    "packages": "run-s packages:*",
    "packages:fix": "lerna run --parallel fix && echo",
    "packages:lint": "lerna run --parallel lint",
    "packages:build": "lerna run build --ignore={examples-*}",
    "prerelease": "npm run packages",
    "release": "lerna publish --conventional-commits",
    "release:next": "npm run packages && lerna publish --conventional-commits --conventional-prerelease --dist-tag=next --exact",
    "promote:next": "lerna publish --conventional-commits --conventional-graduate",
    "release:beta": "npm run release --dist-tag=beta --preid=beta",
    "release:canary": "npm run release --force-publish=\"*\" --canary --exact --npm-client npm",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^18.6.2",
    "@commitlint/config-lerna-scopes": "^18.6.1",
    "@mdx-js/mdx": "^2.3.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/find-up": "^4.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^12.6.8",
    "@types/pascal-case": "^1.1.2",
    "@types/prettier": "^1.16.4",
    "@types/reach__router": "^1.2.4",
    "@types/react-dom": "^18.2.0",
    "@types/react": "^16.8.23",
    "@types/resolve": "^0.0.8",
    "@types/shelljs": "^0.8.5",
    "@types/signale": "^1.2.1",
    "@types/wait-on": "^3.2.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.8.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-react-app": "^9.1.2",
    "copy-files-from-to": "^3.9.1",
    "commitizen": "^3.1.2",
    "cross-env": "^5.2.1",
    "eslint-config-doc-js": "^2.4.0",
    "eslint-config-doc-ts": "^2.4.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint": "^8.57.0",
    "find-up": "^4.1.0",
    "husky": "^3.0.0",
    "jest": "^24.9.0",
    "lerna": "8.1.2",
    "lint-staged": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "@bill-doc/doc-plugin-remark": "^2.1.0",
    "trash-cli": "^3.0.0",
    "trash": "^6.0.0",
    "ts-jest": "^24.0.2",
    "babel-preset-gatsby-package": "^1.12.0-next.0",
    "typescript": "5.1.6"
  },
  "overrides": {
    "lerna": "8.1.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "typescript": "5.1.6"
  },
  "volta": {
    "node": "18.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "lint-configs/*",
      "examples/*"
    ],
    "nohoist": [
      "examples/*"
    ]
  }
}
